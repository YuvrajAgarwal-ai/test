<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/app_bar_layout">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@id/settings_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profile"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/setings_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/inputs"
                android:hint="profile status"
                android:padding="30dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/inputs"
                android:hint="Username"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_username"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Full Name"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_fullname"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Country"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_country"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Date Of Birth"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_dob"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Gender"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/setings_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setings_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Relationship Status"
                android:padding="12dp"
                android:textColor="@color/darker_grey"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/update_account_settings_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/setings_relationship_status"
                android:text="Update Account Settings"
                android:background="@drawable/button"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>